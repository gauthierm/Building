{
	"name": "silverorange/building",
	"description": "Basic CMS framework.",
	"type": "library",
	"keywords": [ "cms" ],
	"homepage": "https://github.com/silverorange/building",
	"license": "MIT",
	"authors": [
		{
			"name": "Michael Gauthier",
			"email": "mike@silverorange.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://composer.silverorange.com"
		},
		{
			"packagist": false
		}
	],
	"require": {
		"php": ">=5.2.1",
		"ext-mbstring": "*",
		"silverorange/admin": "^4.0.0",
		"silverorange/site": "^6.0.0",
		"silverorange/swat": "^3.0.0"
	},
	"require-dev": {
		"silverorange/coding-standard": "^1.0.0"
	},
	"scripts": {
		"lint": "./vendor/bin/phpcs",
		"post-install-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/silverorange/coding-standard/src",
		"post-update-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/silverorange/coding-standard/src"
	},
	"autoload": {
		"classmap": [ "Building/" ]
	}
}
